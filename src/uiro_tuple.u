module uiro_tuple
  include Enumerable

  def reduce(acc, func)
    list = tuple_to_list(self)
    lists::foldl(func, acc, list)
  end

  def nth(n)
    erlang::element(n, self)
  end

  def set(n, item)
    erlang::setelement(n, self, item)
  end

  def size()
    erlang::tuple_size(self)
  end

  def append(item)
    erlang::append_element(self, item)
  end

  def add(item)
    erlang::append_element(self, item)
  end

  def to_list()
    erlang::tuple_to_list(self)
  end
end