class Map
  include TaskBase

  def initialize(func)
    {func: func,
     task_list: []}
  end

  def initialize(func, task_list)
    {func: func,
     task_list: task_list}
  end

  def self.map(next_actor, func)
    receive
      case :eos
        next_actor ! :eos
      case value
        next_actor ! func.(value)
        map(next_actor, func)
    end
  end

  def spawn_actor(next_actor)
    spawn(__name__, :map, [next_actor, @func])
  end

  def update_task_list(task_list)
    new Map(@func, task_list)
  end
end